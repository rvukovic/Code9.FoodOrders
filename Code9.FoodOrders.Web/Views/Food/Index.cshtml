@model IEnumerable<Code9.FoodOrders.Data.Food>


@{
    ViewBag.Title = "FoodList";
}

<h2>FoodList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
  <tr>
    <th></th>
    <th>
      Name
    </th>
    <th>
      Description
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model) {
    <tr>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.Id })

      </td>
      <td>
        @item.Name
      </td>
      <td>
        @item.Description
      </td>
      <td>@Html.ActionLink("Order this food", "AddFoodToOrder", new { foodId=item.Id })</td>
    </tr>
  }

</table>
